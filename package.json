        "@types/mocha": "^9.0.0",
        "@types/node": "^18.11.17",
        "chai": "^4.3.4",
        "cspell": "^5.13.0",
        "ethers": "^5.7.2",
        "hardhat": "^2.12.2",
        "ts-node": "^10.2.1",
        "typechain": "^8.1.1",
        "typescript": "^4.4.3"
    }
}
